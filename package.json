{
  "name": "font-preview",
  "displayName": "Font Preview",
  "description": "Preview fonts in VS Code",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "ctcuff",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctcuff/vscode-font-preview/"
  },
  "keywords": [
    "font",
    "viewer",
    "font preview",
    "font viewer"
  ],
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCustomEditor:font.detail.preview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "font.detail.preview",
        "displayName": "Font Preview",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{ttf,ttc,otf,woff,woff2}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:extension": "webpack --mode production --devtool eval",
    "build:web": "cd ./web && yarn build",
    "format": "prettier --write './src/**/*{.js,.ts}' './web/**/*{.js,.jsx,.ts,.tsx,.scss}'",
    "lint": "yarn lint:web && yarn lint:extension",
    "lint:web": "cd ./web && yarn lint",
    "lint:extension": "eslint './src/**/*{.js,.ts}'",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "pretest": "yarn run test-compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "test:compile": "tsc -p ./",
    "test:watch": "tsc -watch -p ./",
    "test:publish": "vsce package",
    "vscode:prepublish": "yarn run build",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "webpack --watch --mode development",
    "watch:web": "cd ./web && yarn watch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "html-loader": "^2.1.2",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.7.0"
  }
}
