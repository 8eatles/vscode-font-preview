# !/bin/bash
if [ -z "$1" ]; then
    echo "Usage: bash scripts/create-zip [version]"
    exit 1
fi

zip -r font-preview-$1.zip . -x \
    "*.DS_Store" \
    "*.log" \
    "*.vsix" \
    ".env" \
    ".idea/*" \
    "./.git/*" \
    "dist/*" \
    "node_modules/*" \
    ".vscode-test-web/*" \
    "out/*" \
    "web-dist/*" \
    ".vscode-test/*" \
    "scripts/*" \
    "web/node_modules/*" \
   
    
